    <div class="login-box">
        <div class="login-logo">
            <b>Bán Máy Tính</b>
        </div>
<!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="Login" method="post" class="form-check">
                <div class="form-group has-feedback">
                    <label>
                        user
                    </label>
                    <input onkeyup="checkToSignIn()" type="text" class="form-control" name="username" id="username" placeholder="username">
                    <div id="er_user"></div>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>
                        password
                    </label>
                    <input onkeyup="checkToSignIn()" type="password" class="form-control" name="password" id="password" placeholder="Password">
                    <div id="er_password"></div>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <input type="submit" class="btn btn-primary btn-block btn-flat" value="Sign In" />
                    </div>
<!-- /.col -->
                </div>
            </form>
            <br />
            <div>
                <a href="/Home/Create" class="btn btn-primary btn-block btn-flat"> Create New Acc</a>
            </div>
            
