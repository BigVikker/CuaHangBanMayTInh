<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <a href="/Shop/Index" style="text-align:center" class="btn btn-danger btn-info" >
            Ve Trang Chu
        </a>
        <div class="container">
            
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right">
                    @{


                        <li>
                            <a class="btn btn-primary" href="/Shop/Cart">
                                <span class="glyphicon glyphicon-shopping-cart"></span>  Shopping Cart
                            </a>
                        </li>

                        if (Session["username"] != null)
                        {
                            <li>@Html.ActionLink(@Session["username"] + " LogOut", "Login", "Home", new { @class = "btn btn-default" })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("LogIn", "Login", "Home")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:lavender">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
