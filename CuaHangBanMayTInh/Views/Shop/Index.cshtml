@model IPagedList<CuaHangBanMayTInh.Models.Enites.MayTinh>
@using PagedList.Mvc;
@using PagedList;

<head runat="server">
    <asp:Content ID="HeaderContent" runat="server" ContentPlaceHolderID="HeadContent">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/XYZ.css" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" />
        <script src="/Scripts/modernizr-2.8.3.js"></script>
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
    </asp:Content>
</head>

<div class="jumbotron" style="background-color:ivory">
    <h1>Cửa Hàng Bán Máy Tính Thành Công</h1>
    <p class="lead">Cửa Hàng Thành Công Bán Các Thiết Bị Máy Tính Và Phân Phối Sản Phẩm Trên Toàn Quốc </p>
</div>

<br />

<div>
    <form action="https://localhost:44359/Shop/Index">
        <div class="col-md-6">
            <div class="form-group">
                <label>Tìm Kiếm Tên Máy Tính : </label>
                <input type="text" name="stringFind" placeholder=" tên máy tính" value="@ViewBag.stringFind">
                <input type="submit" class="btn-file" />
            </div>
        </div>
    </form>
</div>

<div>
    <a href="https://localhost:44359/Shop/Create" class="btn btn-info" >
        Thêm mới sản phẩm máy tính
    </a>
</div>
<div>
    <div class="container">
        <ul>
            @foreach (var item in Model)
            {
                <li class="list-group-item" style="width:32%; float:left;">
                    <a href="https://localhost:44359/Shop/Details?id=@item.maMayTinh">
                        <label>Sản Phẩm :</label><b>@item.tenMayTinh</b>
                        <br />
                        <div style="height:300px; ">
                            @{
                                string anh = "/Content/Photo/" + item.maMayTinh + ".jpg";
                            }
                            <img class="fullSreen " style="width:100%;" src="@anh" />
                        </div>
                        <label>
                            Giá : <b> @item.Gia</b>
                        </label>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, stringFind = ViewBag.stringFind }))